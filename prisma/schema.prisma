generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Radios {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  api_secret     String
  source_id      String    @map("source_id")
  last_heartbeat DateTime? @default(now()) @updatedAt
  description    String
}

model Files {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String   @map("filename")
  size       Int      @map("file_size")
  mime_type  String
  created_at DateTime @default(now())
}

model Clips {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  display_time String
  created_dt   DateTime @default(now())
  file_id      String @map("file_id")
  date_id      String @map("date_id")
}

model Dates {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  display_date String
  created_dt   DateTime @default(now())
  source_id    String @map("source_id")
}

model Sources {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  shorthand String
  timezone  String
}
